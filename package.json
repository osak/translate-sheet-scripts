{
  "name": "ddlc-jp-sheet-script",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "fix": "run-s fix:*",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:deno-fmt": "deno fmt --config deno.jsonc",
    "lint": "run-p -l -c --aggregate-output lint:*",
    "lint:eslint": "eslint --ignore-path .gitignore src",
    "lint:deno-fmt": "deno fmt --check --config deno.jsonc",
    "test": "run-p -l -c --aggregate-output lint:* unit",
    "unit": "jest",
    "build": "deno run --allow-read --allow-env --allow-net --allow-write --allow-run build.ts",
    "deploy": "ts-node -O '{\"module\":\"commonjs\"}' deploy.ts"
  },
  "author": "proudust",
  "license": "MIT",
  "devDependencies": {
    "@google/clasp": "^2.4.1",
    "@types/google-apps-script": "^1.0.41",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.11",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-plugin-googleappsscript": "^1.0.4",
    "eslint-plugin-jest": "^25.3.0",
    "jest": "^27.4.3",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^27.1.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
